@page "/"
@using JournalApp.Services
@inject JournalService JournalService
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime


<!--home page container -->
<div class="home-page">
    <div class="hero">
        <h1><i class="bi bi-journal-bookmark-fill"></i> Welcome to Your Journal</h1>
        <p class="tagline">Capture your thoughts, track your moods, and reflect on your journey</p>
    </div>

    <div class="quick-stats">
        <div class="stat-card">
            <div class="stat-icon"><i class="bi bi-fire"></i></div>
            <div class="stat-value">@streakInfo.CurrentStreak</div>
            <div class="stat-label">Day Streak</div>
        </div>
        
        <div class="stat-card">
            <div class="stat-icon"><i class="bi bi-pencil-fill"></i></div>
            <div class="stat-value">@streakInfo.TotalEntries</div>
            <div class="stat-label">Total Entries</div>
        </div>
        
        <div class="stat-card">
            <div class="stat-icon"><i class="bi bi-trophy-fill"></i></div>
            <div class="stat-value">@streakInfo.LongestStreak</div>
            <div class="stat-label">Best Streak</div>
        </div>
    </div>

    <div class="quick-actions">
        <div class="action-card primary" @onclick="CreateEntry">
            <div class="action-icon"><i class="bi bi-pencil-square"></i></div>
            <h3>Write Today's Entry</h3>
            <p>@(hasTodayEntry ? "Edit your entry for today" : "Start your daily reflection")</p>
        </div>

        <div class="action-card" @onclick="ViewEntries">
            <div class="action-icon"><i class="bi bi-journal-text"></i></div>
            <h3>Browse Entries</h3>
            <p>Read and manage your past entries</p>
        </div>

        <div class="action-card" @onclick="ViewCalendar">
            <div class="action-icon"><i class="bi bi-calendar3"></i></div>
            <h3>Calendar View</h3>
            <p>See your journaling journey at a glance</p>
        </div>

        <div class="action-card" @onclick="ViewDashboard">
            <div class="action-icon"><i class="bi bi-graph-up-arrow"></i></div>
            <h3>View Analytics</h3>
            <p>Explore insights about your moods and habits</p>
        </div>
    </div>
    @* Show recent entries only if available *@
    @if (recentEntries.Any())
    {
        <div class="recent-section">
            <h3><i class="bi bi-clock-history"></i> Recent Entries</h3>
            <div class="recent-entries">
                @foreach (var entry in recentEntries)
                {
                    <div class="recent-card" @onclick="() => EditEntry(entry.EntryDate)">
                        <div class="recent-date">
                            <i class="bi bi-calendar-event"></i>
                            <span>@entry.EntryDate.ToString("MMM dd")</span>
                        </div>
                        <div class="recent-content">
                            <h4>@entry.Title</h4>
                            <p>@(entry.Content.Length > 80 ? entry.Content.Substring(0, 80) + "..." : entry.Content)</p>
                            <span class="recent-mood">@GetMoodEmoji(entry.PrimaryMood) @entry.PrimaryMood</span>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
    
    <!-- Helpful journaling tips section -->
    <div class="tips-section">
        <h3><i class="bi bi-lightbulb-fill"></i> Journaling Tips</h3>
        <div class="tips">
            <div class="tip">
                <i class="bi bi-check-circle-fill tip-icon"></i>
                <div class="tip-content">
                    <strong>Be Consistent:</strong> Try to write every day, even if it's just a few sentences.
                </div>
            </div>
            <div class="tip">
                <i class="bi bi-heart-fill tip-icon"></i>
                <div class="tip-content">
                    <strong>Be Honest:</strong> Your journal is a safe space for your true thoughts and feelings.
                </div>
            </div>
            <div class="tip">
                <i class="bi bi-arrow-repeat tip-icon"></i>
                <div class="tip-content">
                    <strong>Reflect:</strong> Use your journal to track patterns and growth over time.
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private List<JournalEntry> recentEntries = new();
    private StreakInfo streakInfo = new();
    private bool hasTodayEntry = false;

    protected override async Task OnInitializedAsync()
    {
        //load Bootstrap Icons if not already included
        await JSRuntime.InvokeVoidAsync("eval", @"
            if (!document.getElementById('bootstrap-icons')) {
                const link = document.createElement('link');
                link.id = 'bootstrap-icons';
                link.rel = 'stylesheet';
                link.href = 'https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css';
                document.head.appendChild(link);
            }
        ");

        var allEntries = await JournalService.GetAllEntriesAsync();
        recentEntries = allEntries.Take(3).ToList();
        streakInfo = await JournalService.GetStreakInfoAsync();
        hasTodayEntry = await JournalService.HasEntryForDateAsync(DateTime.Today);
    }

    private void CreateEntry()
    {
        NavigationManager.NavigateTo("/entry");
    }

    private void ViewEntries()
    {
        NavigationManager.NavigateTo("/journal");
    }

    private void ViewCalendar()
    {
        NavigationManager.NavigateTo("/calendar");
    }

    private void ViewDashboard()
    {
        NavigationManager.NavigateTo("/dashboard");
    }

    private void EditEntry(DateTime date)
    {
        NavigationManager.NavigateTo($"/entry/{date:yyyy-MM-dd}");
    }

    private string GetMoodEmoji(string mood)
    {
        return mood switch
        {
            "Happy" => "😊", "Excited" => "🤩", "Relaxed" => "😌", "Grateful" => "🙏", "Confident" => "💪",
            "Calm" => "😐", "Thoughtful" => "🤔", "Curious" => "🧐", "Nostalgic" => "🥹", "Bored" => "😑",
            "Sad" => "😢", "Angry" => "😠", "Stressed" => "😰", "Lonely" => "😔", "Anxious" => "😟",
            _ => "📝"
        };
    }
}

