@page "/journal-form"
@page "/journal-form/{EntryId:int}"
@using JournalApp.Services
@using JournalApp.Models
@inject JournalService JournalService
@inject NavigationManager Navigation

<div class="journal-form-page">
    @if (loading)
    {
        <div class="loading">Loading...</div>
    }
    else
    {
        <div class="form-container">
            <h3>@(EntryId.HasValue ? "Edit" : "New") Journal Entry</h3>

            <div class="form-group">
                <label>Date</label>
                <input type="date" class="form-control" @bind="entry.Date" />
            </div>

            <div class="form-group">
                <label>Title (Optional)</label>
                <input type="text" class="form-control" @bind="entry.Title" 
                       placeholder="Give your entry a title..." />
            </div>

            <div class="form-group">
                <label>How are you feeling?</label>
                <div class="mood-selector">
                    @foreach (var mood in moods)
                    {
                        <button type="button" 
                                class="mood-btn @(entry.Mood == mood.Name ? "active" : "")"
                                @onclick="() => entry.Mood = mood.Name">
                            <span class="mood-emoji">@mood.Emoji</span>
                            <span class="mood-name">@mood.Name</span>
                        </button>
                    }
                </div>
            </div>

            <div class="form-group">
                <label>Sleep Times (Optional)</label>
                <div class="time-inputs">
                    <div>
                        <label>Wake Up</label>
                        <input type="time" class="form-control" 
                               value="@(entry.WakeUpTime?.ToString("HH:mm"))"
                               @onchange="@(e => entry.WakeUpTime = string.IsNullOrEmpty(e.Value?.ToString()) ? null : TimeOnly.Parse(e.Value.ToString()!))" />
                    </div>
                    <div>
                        <label>Sleep</label>
                        <input type="time" class="form-control" 
                               value="@(entry.SleepTime?.ToString("HH:mm"))"
                               @onchange="@(e => entry.SleepTime = string.IsNullOrEmpty(e.Value?.ToString()) ? null : TimeOnly.Parse(e.Value.ToString()!))" />
                    </div>
                </div>
            </div>
            
            
            <!-- Main journal content -->
            <div class="form-group">
                <label>What's on your mind? *</label>
                <textarea class="form-control" rows="10" @bind="entry.Content"
                          placeholder="Write your thoughts here..."></textarea>
            </div>

            <div class="form-group">
                <label>Tags</label>
                <div class="tags-input">
                    <input type="text" class="form-control" @bind="newTag" 
                           @onkeypress="@(e => { if (e.Key == "Enter") AddTag(); })"
                           placeholder="Add a tag and press Enter..." />
                    <button type="button" class="btn btn-secondary" @onclick="AddTag">Add</button>
                </div>
                <div class="tags-list">
                    @foreach (var tag in currentTags)
                    {
                        <span class="tag">
                            @tag
                            <button type="button" @onclick="() => RemoveTag(tag)">√ó</button>
                        </span>
                    }
                </div>
            </div>

            <div class="form-actions">
                <button class="btn btn-primary" @onclick="SaveEntry" disabled="@saving">
                    @(saving ? "Saving..." : "Save Entry")
                </button>
                <button class="btn btn-secondary" @onclick="Cancel">Cancel</button>
            </div>
        </div>
    }
</div>

@code {
    // Route parameter for editing existing entries
    [Parameter]
    public int? EntryId { get; set; }

    private JournalEntry entry = new();
    private bool loading = true;
    private bool saving = false;
    private List<string> currentTags = new();
    private string newTag = "";

    private List<(string Name, string Emoji)> moods = new()
    {
        ("Amazing", "üòÑ"),
        ("Good", "üòä"),
        ("Okay", "üòê"),
        ("Bad", "üòî"),
        ("Terrible", "üò¢")
    };

    protected override async Task OnInitializedAsync()
    {
        if (EntryId.HasValue)
        {
            var existingEntry = await JournalService.GetEntryByIdAsync(EntryId.Value);
            if (existingEntry != null)
            {
                entry = existingEntry;
                currentTags = entry.GetTags();
            }
        }
        else
        {
            entry.Date = DateTime.Now;
        }
        
        loading = false;
    }

    private async Task SaveEntry()
    {
        if (string.IsNullOrWhiteSpace(entry.Content))
            return;

        saving = true;
        entry.SetTags(currentTags);

        if (EntryId.HasValue)
        {
            await JournalService.UpdateEntryAsync(entry);
        }
        else
        {
            await JournalService.AddEntryAsync(entry);
        }

        Navigation.NavigateTo("/journal-list");
    }

    private void AddTag()
    {
        if (!string.IsNullOrWhiteSpace(newTag) && !currentTags.Contains(newTag))
        {
            currentTags.Add(newTag.Trim());
            newTag = "";
        }
    }

    private void RemoveTag(string tag)
    {
        currentTags.Remove(tag);
    }

    private void Cancel()
    {
        Navigation.NavigateTo("/journal-list");
    }
}

